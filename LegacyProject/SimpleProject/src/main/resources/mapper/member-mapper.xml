<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberMapper">
	<select id="login"
			parameterType="memberDTO"
			resultType="memberDTO">
		SELECT
				MEMBER_ID memberId
			  ,	MEMBER_PW memberPw
			  ,	MEMBER_NAME memberName
			  , EMAIL
			  , ENROLL_DATE enrollDate
		   FROM	
		   		KH_MEMBER
		  WHERE
		  		MEMBER_ID = #{memberId}
	</select>
	
	<!-- 아이디 중복체크용  -->
	<select id="checkId"
			parameterType="string"
			resultType="_int">
		SELECT
				COUNT(*)
		   FROM	
		   		KH_MEMBER
		  WHERE
		  		MEMBER_ID = #{memberId}
	</select>
	
	<select id="signUp"
			parameterType="memberDTO">
		INSERT
		  INTO
		  		KH_MEMBER
		VALUES
				(
				#{memberId}
			  ,	#{memberPw}
			  ,	#{memberName}
			  ,	#{email}
			  ,	SYSDATE
				)
	</select>
	
</mapper>
